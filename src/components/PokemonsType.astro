---
interface Props {
  type: string
}

const {type} = Astro.props

const fixedTypeName = `${type[0].toUpperCase()}${type.slice(1)}`
---
<a href=`/type/${type}`>
  <h1 class:list={[
    "rounded-xl border py-0.5 px-1 text-slate-100 w-24",
    {
      "bg-green-500 border-green-700": type === 'grass',
      "bg-purple-500 border-purple-700": type === 'poison',
      "bg-red-400 border-red-600": type === 'fire',
      "bg-blue-500 border-blue-700": type === 'water',
      "bg-zinc-400 border-zinc-500": type === 'normal',
      "bg-yellow-900 border-yellow-950": type === 'ground',
      "bg-yellow-500 border-yellow-700": type === 'electric',
      "bg-blue-400 border-blue-500": type === 'flying',
      "bg-pink-500 border-pink-700": type === 'fairy',
      "bg-lime-500 border-lime-700": type === 'bug',
      "bg-red-700 border-red-800": type === 'fighting',
    }
  ]}>
  {fixedTypeName}
  </h1>
</a>