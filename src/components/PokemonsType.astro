---
interface Props {
  type: string
}

const {type} = Astro.props

const fixedTypeName = `${type[0].toUpperCase()}${type.slice(1)}`
---
<a href=`/type/${type}`>
  <h1 class:list={[
    "rounded-xl border py-0.5 px-1 text-slate-100 w-24 hover:scale-110",
    {
      "bg-green-500 border-green-700": type === 'grass',
      "bg-purple-500 border-purple-700": type === 'poison',
      "bg-red-600 border-red-700": type === 'fire',
      "bg-blue-500 border-blue-700": type === 'water',
      "bg-zinc-400 border-zinc-500": type === 'normal',
      "bg-yellow-900 border-yellow-950": type === 'ground',
      "bg-yellow-500 border-yellow-700": type === 'electric',
      "bg-blue-400 border-blue-500": type === 'ice',
      "bg-pink-500 border-pink-700": type === 'fairy',
      "bg-lime-500 border-lime-700": type === 'bug',
      "bg-red-800 border-red-900": type === 'fighting',
      "bg-pink-700 border-pink-800": type === 'psychic',
      "bg-amber-950 border-amber-950": type === 'rock',
      "bg-slate-400 border-slate-600": type === 'steel',
      "bg-sky-300 border-sky-400": type === 'flying',
      "bg-indigo-900 border-indigo-950": type === 'ghost',
      "bg-stone-800 border-indigo-900": type === 'dark',
      "bg-indigo-700 border-indigo-800": type === 'dragon',
    }
  ]}>
  {fixedTypeName}
  </h1>
</a>